
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80)">
  <h1>Save any kinds of movies</h1>
</div>

<div class="container">
  <div id="lists">
    <h2>My lists</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-gradient" %>
  </div>
</div>

<div class="container list-container">
  <% @lists.each do |list| %>
    <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fit %>')">
      <li><%= link_to list.name, list_path(list)%></li>
    </div>
  <% end %>
</div>

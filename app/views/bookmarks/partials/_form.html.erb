<div class="container">
  <%= simple_form_for [list, bookmark] do |f| %>
    <%= f.input :movie_id, collection: movies, label_method: :title, value_method: :id, label: 'Movie' %>
    <%= f.input :comment %>

    <div class="actions">
      <%= f.button :submit, "Create Bookmark" %>
    </div>
  <% end %>
</div>
